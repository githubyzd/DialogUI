<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dialog.helper.DialogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/system1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="system1"
            android:text="系统原生弹出框1按钮" />

        <Button
            android:id="@+id/system2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="system2"
            android:text="系统原生弹出框2按钮" />

        <Button
            android:id="@+id/system3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="system3"
            android:text="系统原生弹出框3按钮" />

        <Button
            android:id="@+id/systemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="systemList"
            android:text="系统原生列表弹窗" />

        <Button
            android:id="@+id/systemProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="systemProgress"
            android:text="系统原生等待弹窗" />

        <Button
            android:id="@+id/systemSingle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="systemSingle"
            android:text="系统原生单选框" />

        <Button
            android:id="@+id/systemMulti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="systemMulti"
            android:text="系统原生多选框" />

        <Button
            android:id="@+id/systemProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="systemProgressbar"
            android:text="系统原生进度条弹窗" />

        <Button
            android:id="@+id/systemEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="systemEdit"
            android:text="系统原生编辑弹窗" />

        <Button
            android:id="@+id/customAlert1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customAlert1"
            android:text="自定义提示框1" />

        <Button
            android:id="@+id/customAlert2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customAlert2"
            android:text="自定义提示框2" />

        <Button
            android:id="@+id/customAlert3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customAlert3"
            android:text="自定义提示框3" />

        <Button
            android:id="@+id/customEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="customEdit"
            android:text="自定义输入框" />

        <Button
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="loading"
            android:text="loading" />

        <Button
            android:id="@+id/btn_select_ym"
            android:layout_width="match_parent"
            android:text="选择日期年月"
            android:onClick="btn_select_ym"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_select_ymd"
            android:layout_width="match_parent"
            android:text="选择日期年月日"
            android:onClick="btn_select_ymd"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_select_ymdhm"
            android:layout_width="match_parent"
            android:text="选择日期年月日时分"
            android:onClick="btn_select_ymdhm"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_select_ymdhms"
            android:layout_width="match_parent"
            android:text="选择日期年月日时分秒"
            android:onClick="btn_select_ymdhms"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>
